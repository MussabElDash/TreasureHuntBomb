<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bomb_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/minPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/secPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/minPicker" />

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/hourPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/minPicker" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minPicker"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/minPicker"
        android:text="@string/start" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/secPicker"
        android:layout_alignTop="@+id/startButton"
        android:layout_marginRight="26dp"
        android:text="@string/wake"
        android:textOff="@string/wake"
        android:textOn="@string/wake" />

</RelativeLayout>